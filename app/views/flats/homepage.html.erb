<div class="banner">
  <div class="heading">
    <%= form_tag flats_path, method: :get do %>
      <%= text_field_tag :query, params[:query], placeholder: "xxx" %>
      <button class="icon"><i class="fa fa-search"></i></button>
    <% end %>
    <h1>Rent'Flat</h1>
    <%= link_to "Ajouter votre appart'", new_flat_path, class: "btn btn-light" %>
  </div>
</div>

<div class="container">
  <%# <%= link_to "Recherche personalisée", filter_search_path %>

  <div id="map" style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

    <% if @flats.empty? == false %>
        <div class="index-grid">
          <% @flats.each do |flat| %>
            <div class="card-trip">
              <% if flat.photo.attached? %>
                <%= link_to cl_image_tag(flat.photo.key), flat_path(flat) %>
              <% else %>
                <%= link_to image_tag("default_flat.png"), flat_path(flat) %>
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <%= flat.address %>
                  <h2><%= link_to flat.brand.upcase, flat_path(flat) %> <%= link_to flat.name.capitalize, flat_path(flat) %></h2>
                </div>
                <h4 class="card-trip-pricing"><%= flat.price_per_day %>€/jour</h4>
              </div>
            </div>
          <% end %>
        </div>
    <% else %>
      <h1>Aucun Résultat !</h1>
    <% end %>
</div>
