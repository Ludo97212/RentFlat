<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <h2><i class="fa-solid fa-house-flag"></i> Home</h2>
  <% end %>

  <h2><strong> Rent'Flat</strong></h2>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <% if current_user == nil %>
      <li class="nav-item">
        <p><%= link_to "S'inscrire", new_user_registration_path, class: "nav-link" %></p>
      </li>
      <li class="nav-item">
        <p><%= link_to "Se connecter", new_user_session_path, class: "nav-link" %></p>
        </li>
      <% else %>
        <li>
          <p><%= current_user.email %></p>
        </li>
      <% end %>

      <li class="nav-item dropdown">
        <% if current_user != nil && current_user.avatar.attached? %>
          <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag "icon.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user != nil %>
            <%= link_to "Mes Apparts' à louer", my_flats_path, class: "dropdown-item" %>
            <%= link_to "Mes Reservations", my_bookings_path, class: "dropdown-item" %>
            <%= link_to "Mes Demandes", my_demands_path, class: "dropdown-item" %>
            <%= link_to "Modifier profil", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Auncune session en cours", new_user_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
