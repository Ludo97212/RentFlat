<div class="navbar navbar-expand-sm navbar-light navbar">
  <%= link_to "/", class: "navbar-brand" do %>
    <h2><i class="fa-solid fa-house-flag"></i> Home</h2>
  <% end %>

  <h2><strong> Rent'Flat</strong></h2>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

  <div style="display: flex; flex-direction: row;">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      <% if current_user == nil %>
        <li class="nav-item">
          <p><%= link_to "S'inscrire", new_user_registration_path, class: "nav-link" %></p>
        </li>
        <li class="nav-item">
          <p><%= link_to "Se connecter", new_user_session_path, class: "nav-link" %></p>
          </li>
        <% else %>
          <li>
            <p><%= current_user.email %></p>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="nav-user">
      <ul>
        <li><%= image_tag "avatar1-yellow.png", class: "avatar dropdown-toggle" %>
          <ul class="dropdown">
            <% if current_user != nil %>
              <%= link_to "Mes Apparts' à louer", my_flats_path %>
              <%= link_to "Mes Reservations", my_bookings_path %>
              <%= link_to "Mes Demandes", my_demands_path %>
              <%= link_to "Modifier profil", edit_user_registration_path %>
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete %>
            <% else %>
              <%= link_to "Connexion", new_user_session_path %>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </div>

</div>
